generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
  output        = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  uuid       String    @unique @default(uuid())
  full_name  String    @db.VarChar(100)
  email      String    @unique @db.VarChar(100)
  password   String    @db.VarChar(255)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime  @updatedAt @db.Timestamp(0)
  deleted_at DateTime? @db.Timestamp(0)
  folders    Folder[]
  files      File[]
  shares     Share[]

  @@map("users")
}

model Folder {
  id         Int       @id @default(autoincrement())
  uuid       String    @unique @default(uuid())
  name       String
  parent_id  Int?
  parent     Folder?   @relation("FolderToFolder", fields: [parent_id], references: [id])
  children   Folder[]  @relation("FolderToFolder")
  owner_id   Int
  owner      User      @relation(fields: [owner_id], references: [id])
  files      File[]
  shares     Share[]   @relation("FolderShares")
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime  @updatedAt @db.Timestamp(0)
  deleted_at DateTime? @db.Timestamp(0)

  @@map("folders")
}

model File {
  id             Int       @id @default(autoincrement())
  uuid           String    @unique @default(uuid())
  name           String
  url_download   String
  url_preview    String
  url_cloudinary String
  public_id      String
  type           String
  size           Int
  folder_id      Int?
  folder         Folder?   @relation(fields: [folder_id], references: [id])
  owner_id       Int
  owner          User      @relation(fields: [owner_id], references: [id])
  shares         Share[]   @relation("FileShares")
  created_at     DateTime  @default(now()) @db.Timestamp(0)
  updated_at     DateTime  @updatedAt @db.Timestamp(0)
  deleted_at     DateTime? @db.Timestamp(0)

  @@map("files")
}

enum Permission {
  VIEW
  EDIT
}

model Share {
  id         Int        @id @default(autoincrement())
  uuid       String     @unique @default(uuid())
  file_id    Int?
  folder_id  Int?
  user_id    Int
  permission Permission
  created_at DateTime   @default(now()) @db.Timestamp(0)
  updated_at DateTime   @updatedAt @db.Timestamp(0)
  deleted_at DateTime?  @db.Timestamp(0)

  file   File?   @relation("FileShares", fields: [file_id], references: [id], map: "shares_file_id_fkey")
  folder Folder? @relation("FolderShares", fields: [folder_id], references: [id], map: "shares_folder_id_fkey")
  user   User    @relation(fields: [user_id], references: [id], map: "shares_user_id_fkey")

  @@map("shares")
}

model RevokedToken {
  id         Int       @id @default(autoincrement())
  uuid       String    @unique @default(uuid())
  token      String    @unique @db.VarChar(600)
  expired_at DateTime  @db.Timestamp(0)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime  @updatedAt @db.Timestamp(0)
  deleted_at DateTime? @db.Timestamp(0)
}
